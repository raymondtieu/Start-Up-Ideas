extends layout

block content
    div.col-md-4.center
        form.form-signin(action="/signup", method="POST")
            center
                h2.form-signin-heading.center Sign Up
            input.form-control(type="text" name="name" placeholder="Name", required, autofocus)
            input.form-control(type="email" name="username" placeholder="Email address", required)
            input.form-control(type="password" name="password" placeholder="Password", required)
            input.form-control(type="password" name="psagain" placeholder="Password (again)", required)
            br
            button.btn-primary.btn-lg.btn-block(type="submit") Sign Up


        div.row
            if message
                center 
                    span.h4 #{message}

 
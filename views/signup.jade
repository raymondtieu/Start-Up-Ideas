extends layout

block content
    h1 Sign Up

    form(action="/signup", method="POST")
        div
            p Username
            input(type="text" name="username" placeholder="Username", required, autofocus)
        div
            p Password
            input(type="password" name="password" placeholder="Password", required)
        div
            input(type="submit" value="Submit")

        #message
        if message
            p #{message}


extends layout

block content
    h4 #{idea.title}
    p #{idea.poster}
    p #{idea.description}
    p #{idea.industry}
    p #{preference}
    
    if (user.username == idea.poster)
        p
            a(href='/idea=#{idea._id}/update') Update Idea
        p
            a(href='/idea=#{idea._id}/delete') Delete Idea
    else
        p
            a(href='/idea=#{idea._id}/like') Like
        p
            a(href='/idea=#{idea._id}/dislike') Dislike
    p
        a(href='/signout') Sign Out

        
doctype html
html(ng-app="startUp")
    head
        title= title
        link(rel='stylesheet', href='/stylesheets/style.css')
        link(rel='stylesheet', href='https://maxcdn.bootstrapcdn.com/bootstrap/3.3.2/css/bootstrap.min.css')
        script(src='//code.jquery.com/jquery-1.11.2.min.js')
        script(src='https://ajax.googleapis.com/ajax/libs/angularjs/1.3.14/angular.min.js')
        script(src='//angular-ui.github.io/bootstrap/ui-bootstrap-tpls-0.12.1.js')
        script(src='https://maxcdn.bootstrapcdn.com/bootstrap/3.3.2/js/bootstrap.min.js')
        script(src='scripts/Chart.min.js')
        script(src='scripts/angular-chart.js')

        script(src='scripts/startup.js')

    body
        nav.navbar.navbar-default.navbar-static-top
            div.container
                div.navbar-header
                    button.navbar-toggle.collapsed(type="button", data-toggle="collapse", data-target="#navbar", aria-expanded="false", aria-controls="navbar")
                        span.sr-only Toggle navigation
                        span.icon-bar
                        span.icon-bar
                        span.icon-bar
                    a.navbar-brand(href='/home') Start-Up Ideas
                ul.nav.navbar-nav.navbar-right
                    li 
                        a #{user.name}
                    li 
                        a #{user.email}
                    li
                        a(href='/signout') Sign Out

        div.contents.container-fluid
            block content 

        <!-- Modal to enter details about an idea -->
        script(type="text/ng-template" id="idea-modal.jade")
            div.modal-header
                h3 Start-Up Idea
           
            div.modal-body
                div.row.table
                    div.table-cell.col-md-6
                        span.h5 Title:  
                        br
                        input(type="text", placeholder="Title", required, autofocus, ng-model="title")
                    div.table-cell.col-md-6
                        span.h5 Industry: 
                        select(ng-model="industry" ng-options="i for i in industries")
                div.row.table
                    div.table-cell.col-md-12
                        span.h5 Description:  
                        br 
                        textarea(cols="60" rows="8", placeholder="Description", required, ng-model="description")
                
                div.row.table
                    div.table-cell.col-md-12
                        span.h5 Keywords:
                        br
                        input(type="text", placeholder="Keywords", ng-model="keywords")

            div.modal-footer
                button.btn.btn-warning(ng-click="cancel()") Cancel
                button.btn.btn-primary(ng-click="submit()") Submit

            p {{ errmsg }}